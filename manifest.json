{
  "manifest_version": 2,
  "name": "Booth Shop Blocker",
  "version": "1.0.0",
  "description": "BOOTHで特定のショップをブロックして快適にブラウジングできる拡張機能",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "https://*.booth.pm/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.booth.pm/*"
      ],
      "js": [
        "js/storage.js",
        "js/content.js",
        "js/shop-ui.js"
      ],
      "css": [
        "css/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png",
      "96": "icons/icon-96.png"
    },
    "default_title": "Booth Shop Blocker",
    "default_popup": "popup/popup.html"
  }
}
